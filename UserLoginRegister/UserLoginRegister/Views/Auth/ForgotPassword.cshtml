@using UserLoginRegister.Views.ViewModels;

@{
    ViewData["Title"] = "ForgotPassword";
}
@model ForgotPasswordViewModel

<!-- Begin Main Content Area -->
      <main class="main-content">
        <div
          class="breadcrumb-area breadcrumb-height"
          data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg"
        >
          <div class="container h-100">
            <div class="row h-100">
              <div class="col-lg-12">
                <div class="breadcrumb-item">
                  <h2 class="breadcrumb-heading">Forgot Password Page</h2>
                  <ul>
                    <li>
                      <a href="index.html">Home</a>
                    </li>
                    <li>Forgot Password</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="login-register-area section-space-y-axis-100">
          <div class="container">
            <div class="row">
              <div class="col-lg-12">
                <form method="post">
                  <div class="login-form">
                    <h4 class="login-title">Login</h4>
                    <div class="row">
                      <div class="col-lg-12">
                        <label>Email address*</label>
                        <input asp-for="Email" placeholder="Email adress" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                      </div>
                      
                      <div class="col-lg-12 pt-5">
                        <button
                          class="btn btn-custom-size lg-size btn-pronia-primary"
                        >
                          Send email
                        </button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              
            </div>
          </div>
        </div>
      </main>
      <!-- Main Content Area End Here -->

